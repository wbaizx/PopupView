<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PopupView">
        <attr name="maxNum" format="integer" />
        <attr name="heightLineWidth" format="dimension" />
        <attr name="textViewSize" format="dimension" />
        <attr name="horizontalWidth" format="dimension" />
        <attr name="listItemHeight" format="dimension" />
        <attr name="itemFontSize" format="dimension" />
        <attr name="popupDrawable" format="reference" />
        <attr name="rightDrawable" format="reference" />
        <attr name="itemTextSelectColor" format="color" />
        <attr name="itemTextColor" format="color" />
        <attr name="itemTextGravity">
            <flag name="centre" value="1" />
            <flag name="left" value="2" />
            <flag name="right" value="3" />
        </attr>
        <attr name="menuRes" format="reference" />
        <attr name="arrayRes" format="reference" />
        <attr name="needDivider" format="boolean" />
        <attr name="hideSelected" format="boolean" />
        <attr name="direction">
            <flag name="down" value="0" />
            <flag name="up" value="1" />
            <flag name="left" value="2" />
            <flag name="right" value="3" />
        </attr>
    </declare-styleable>
</resources>